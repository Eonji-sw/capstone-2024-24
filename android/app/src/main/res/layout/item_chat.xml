<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="chat"
            type="com.kotlin.kiumee.presentation.chat.Chat" />

    </data>

    <LinearLayout
        android:id="@+id/layout_item_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray3_fill_end_bottom_20_rect"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="@{chat.content}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="키우미에게 대화를 시작해주세요!" />

    </LinearLayout>
</layout>